.login {
  width: 100%;
  height: 100%;
  background-image: url('../../assets/images/bg.jpg');
  background-size: 100% 100%;
}
.login .login-header {
  display: flex;
  align-items: center;
  height: 80px;
  background-color: rgba(20, 30, 15, 0.5);
}
.login .login-header img {
  width: 40px;
  height: 40px;
}
.login .login-header h1 {
  font-size: 30px;
  color: #fff;
}
.login .login-content {
  width: 400px;
  height: 300px;
  background-color: #fff;
  margin: 40px auto;
  padding: 20px 40px;
}
.login .login-content h2 {
  text-align: center;
  font-size: 30px;
  font-weight: bold;
  margin-bottom: 20px;
}
.login .login-content form {
  height: 200px;
}
.login .login-content form span {
  display: inline-block;
  width: 80px;
  height: 50px;
  font-size: 16px;
  font-weight: 500;
  vertical-align: middle;
}
.login .login-content form .text-msg {
  display: block;
  height: 50px;
  line-height: 40px;
  margin: 5px 0;
}
.login .login-content form .text-msg input {
  height: 30px;
  width: 250px;
  padding: 0 5px;
  font-size: 16px;
  outline: none;
}
.login .login-content form .captcha {
  display: block;
  height: 50px;
  line-height: 40px;
  margin: 5px 0;
}
.login .login-content form .captcha input {
  height: 30px;
  width: 150px;
  padding: 0 5px;
  font-size: 16px;
  outline: none;
}
.login .login-content .login-btn {
  width: 100%;
  height: 50px;
}
.login .login-content .login-btn button {
  display: block;
  width: 80%;
  height: 40px;
  font-size: 20px;
  border: none;
  background-color: #2cbe4e;
  margin: auto;
  color: #fff;
  cursor: pointer;
  font-weight: 600;
  letter-spacing: 10px;
}
